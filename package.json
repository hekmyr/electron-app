{
    "workspaces": [
         "frontend",
         "desktop"
    ],
    "scripts": {
        "install:all": "npm install",
        "install:web": "npm install --workspace=frontend",
        "build:web": "npm run build --workspace=frontend",
        "start:web": "npm start --workspace=frontend",
        "install:desktop": "npm install --workspace=desktop",
        "build:desktop": "npm run build --workspace=desktop",
        "start:desktop": "npm run build --workspace=frontend && npm run build --workspace=desktop && npm start --workspace=desktop",
        "startfast:desktop": "npm start --workspace=desktop"
    }
}
